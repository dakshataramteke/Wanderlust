<% layout('/layouts/boilerplate.ejs') -%>
<body>
   
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="container add_listings">
            <div class="row mt-5">
                <h3 class="mt-2 text-center">Create a New Listing</h3>
                <div class="col-12 col-md-10 offset-md-1">
                    <div class="mb-3">
                        <label for="email" class="form-label">Title <span>*</span></label>
                        <input type="text" name="listing[title]" placeholder="Enter Title" class="form-control" id="email" aria-describedby="emailHelp" required>
                        <div class="invalid-feedback">
                          Please write a Title
                        </div>
                      </div>
            
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Description <span>*</span></label>
                        <textarea name="listing[description]" placeholder="Enter Description" cols="10" rows="5" id="" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                          Please write a Description
                        </div>
                      </div>
                      <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="listing[image]" class="form-control" id="image" >
                       
                      </div>
                      <div class="row">
                        <div class="mb-3 col-12 col-md-4">
                            <label for="price" class="form-label">Price <span>*</span></label>
                            <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control" id="price" required>
                            <div class="invalid-feedback">
                              Please enter a Price
                            </div>
                          </div>
                          <div class="mb-3 col-12 col-md-8">
                            <label for="location" class="form-label">Location <span>*</span></label>
                            <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" id="location" required>
                            <div class="invalid-feedback">
                              Please enter a Location
                            </div>
                          </div>
                      </div>
                     
                      <div class="mb-3">
                        <label for="country" class="form-label">Country <span>*</span></label>
                        <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" id="country" required>
                        <div class="invalid-feedback">
                          Please enter a Country
                        </div>
                      </div>
                      <button type="submit" class="btn btn-success mb-5 w-100">Add</button>    
                </div>
            </div>
        </div>
        
      </form>
</body>
