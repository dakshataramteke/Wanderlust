<% layout('/layouts/boilerplate.ejs') -%>
<body>
   
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
        <div class="container">
            <div class="row">
                <h3 class="mt-3 text-center">Edit Your Listing</h3>
                <div class="col-12 col-md-10 offset-md-1">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Title</label>
                        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                        <div class="invalid-feedback">
                          Please write a Title
                        </div>
                      </div>
            
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Description</label>
                        <textarea name="listing[description]"  cols="10" rows="5" id="" class="form-control" required><%=listing.description%></textarea>
                        <div class="invalid-feedback">
                          Please write a Description
                        </div>
                      </div>
                      <div class="mb-3">
                        <label for="new_Img" class="form-label">Image</label>
                        <input type="file" name="listing[image]"  class="form-control" id="new_Img" >
                       
                      </div>
                      <div class="row">
                        <div class="mb-3 col-12 col-md-4">
                            <label for="exampleInputPassword1" class="form-label">Price</label>
                            <input type="text" name="listing[price]" value="<%=listing.price%>" class="form-control" id="exampleInputPassword1" required>
                            <div class="invalid-feedback">
                              Please enter a Price
                            </div>
                          </div>
                          <div class="mb-3 col-12 col-md-8">
                            <label for="exampleInputPassword1" class="form-label">Location</label>
                            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" id="exampleInputPassword1" required>
                            <div class="invalid-feedback">
                              Please enter a Location
                            </div>
                          </div>
                      </div>
                     
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" id="exampleInputPassword1" required>
                        <div class="invalid-feedback">
                          Please enter a Country
                        </div>
                      </div>
                      <div class="edit">
                        <button type="submit" class="btn btn-success w-100 mb-5">Edit</button> 
                      </div>
                         
                </div>
            </div>
        </div>
        
      </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
</body>
