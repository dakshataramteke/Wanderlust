<% layout('/layouts/boilerplate.ejs') -%>

<body>
    
    <div class="container">
      <h2 class="mb-3">All Listings</h2>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1">
        <% for(let listing of allListings){ %>
          <a href="/listings/<%=listing._id%>">
          <div class="card col listing-card" >
            <img class="card-img-top" src="<%=listing.image%>" alt="Card image cap" style="height:20rem">
            <h5><%= listing.title %></h5>
            <div class="card-img-overlay">Hotel</div>
            <div class="card-body">  
              <p class="card-text">&#8377; <%=listing.price%> / Night</p>
            </div>
          </div>
        </a>
       
          <% } %>
      </div>
    </div>
